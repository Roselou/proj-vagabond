<h1>Sign Up</h1>

<%= form_for @users do |f| %>
  <div>
    <%= f.text_field :name, placeholder: "Name" %>
  </div>
  <div>
    <%= f.text_field :email, placeholder: "Email" %>
  </div>
  <div>
    <%= f.text_field :username, placeholder: "Username" %>
  </div>
  <div>
    <%= f.password_field :password, placeholder: "Password" %>
  </div>
  <!-- Pasword Confirm to finish -->
  <!-- <div>
    <%= f.password_field :password, placeholder: "Password Confirm" %>
  </div> -->
  <%= f.submit "Sign Up" %>
<% end %>
