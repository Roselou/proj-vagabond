<!DOCTYPE html>
<html>
  <head>
    <title>VagabondApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1> VAGABOND </h1>

    <% flash.each do |name, msg| %>
      <p>
        <small> <%= name.capitalize %>: <%= msg %> </small>
      </p>
    <% end %>

    <ul class="nav">
    <% if current_user %>
      <li class="nav-item"><%= link_to "Profile", user_path(current_user) %></li>
      <li class="nav-item"><%= link_to "Log Out", logout_path %></li>
    <% else %>
      <li class="nav-item"><%= link_to "Create Account", new_user_path %></li>
      <li class="nav-item"><%= link_to "Log In", login_path %></li>
    <% end %>
  </ul>

    <%= yield %>
  </body>
</html>
